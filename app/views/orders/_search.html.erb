<div class="card">
  <div class="card-header card-header-success">
    <h4 class="card-title">Order manger</h4>
    <p class="category">

    </p>
  </div>
  <div class="card-body">
    <%= search_form_for @q do |f| %>


    <div class="form-row col-md-12">
      <div class="col form-group">
        <%= f.label :status_eq %>
        <%= f.search_field :status_eq, class: "form-control" %>
      </div>

      <div class="col form-group">
        <%= f.label :customer_id_cont %>
        <%= f.search_field :customer_id_cont, class: "form-control" %>
      </div>


    </div>

    <div class="form-row col-md-12" style="display: flex; justify-content: space-between;">
      <%= f.submit 'Search', class: 'btn btn-primary' %>
      <%= link_to 'New', new_order_path , class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>