<div class="card">
  <div class="card-header card-header-success">
    <h4 class="card-title ">New customer</h4>
    <p class="card-category"></p>
  </div>
  <div class="card-body">
    <%= form_for @customer do |f| %>
    <div class="form-group row">
      <label for="em" class="col-sm-2 col-form-label">
        Name
      </label>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <label for="alt" class="col-sm-2 col-form-label">
        Phone
      </label>
      <div class="col-sm-10">
        <%= f.text_field :phone, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <label for="alt" class="col-sm-2 col-form-label">
        Address
      </label>
      <div class="col-sm-10">
        <%= f.text_area :address, class: 'form-control' %>
      </div>
    </div>
    <%= f.submit 'Save', class: 'btn btn-primary float-right mr-3' %> <% end %>
  </div>
</div>
