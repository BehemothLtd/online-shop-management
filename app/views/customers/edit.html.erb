<div class="card">
  <div class="card-header card-header-success">
    <h4 class="card-title ">New product</h4>
    <p class="card-category"></p>
  </div>
  <div class="card-body">
    <%= form_for @product do |f| %>
    <div class="form-group row">
      <label for="em" class="col-sm-2 col-form-label">
        Name
      </label>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <label for="alt" class="col-sm-2 col-form-label">
        Price
      </label>
      <div class="col-sm-10">
        <%= f.number_field :price, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <label for="alt" class="col-sm-2 col-form-label">
        Description
      </label>
      <div class="col-sm-10">
        <%= f.text_area :description, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <label for="alt" class="col-sm-2 col-form-label">
        Unit
      </label>
      <div class="col-sm-10">
        <%= f.text_field :unit, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <label for="alt" class="col-sm-2 col-form-label">
        Stock
      </label>
      <div class="col-sm-10">
        <%= f.number_field :stock, class: 'form-control' %>
      </div>
    </div>
    <%= link_to 'Back', products_path, class: 'btn btn-default float-right mr-3' %>
    <%= link_to 'Delete', product_path(@product.id), method: :delete, data: { confirm: 'Are you certain you want to delete this product?' }, class: 'btn btn-danger float-right mr-3' %>
    <%= f.submit 'Save', class: 'btn btn-primary float-right mr-3' %>
    <% end %>
  </div>
</div>